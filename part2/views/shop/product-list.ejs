<%- include("../partials/head.ejs",{PageTitle:title}) %>
<%- include("../partials/nav.ejs")%>
<h2>All Products</h2>
<table class="table table-striped table-hover">
<thead><tr>
   <th>Name</th><th>Description</th><th>Price</th> <th colspan="2"></th>
</tr></thead>
<% for(p of products){%>
<tr><td><%= p.name %></td><td><%= p.description %></td><td><%= p.price %></td>
   <td><a class="btn btn-primary" href="/admin/delete-product/<%= p._id%>">Add to Cart</a></td>
   <td><a class="btn btn-success" href="/admin/edit-product/">View</a></td>
</tr>
<%}%>
</table>


