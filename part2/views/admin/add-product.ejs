 <%- include("../partials/head.ejs",{PageTitle:title}) %>
 <%- include("../partials/nav.ejs")%>
<%if(errors.length != 0 ){%>
 <div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
 <% for (e of errors){ %>
    <%= e.msg  %><br>
    <%}%>
</div>
<%}%>
 <form method="post">
    <label for="name" >Name:</label>
    <input type="text" name="name" value="<%= data.name %>" id="name"><br>
    <label for="description" >Description:</label>
        <input type="text" name="description"  value="<%= data.description %>" id="description"><br>
    <label for="price" >Price:</label>
    <input type="number" name="price"  value="<%= data.price %>" id="price"><br>
    <button class="btn btn-primary" type="submit">Add Product</button>
 </form>

